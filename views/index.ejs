<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

            <div class="blogs container">
                <h2>All Blogs</h2>
                <% if ( blogs.length> 0 ) { %>
                    <% blogs.forEach(blog=> { %>
                    <div class="inner-blog"> 
                        <a class="single" href="/blogs/<%= blog._id %>">
                           <h3 class="title"> <%= blog.title %></h3>    </a>
                           <p class="snippet"> Heading : <%=  blog.snippet %></p>
                           <p class="discription">  Description:  <%=  blog.body  %> </p>
                     
                    </div>
                        <% }) %>
                            <% } else { %>
                                <p> There are no blogs to display</p>
                                <% } %>
            </div>
            <%- include('./partials/footer.ejs') %>

               
    </body>

</html>